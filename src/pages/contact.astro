---
import Layout from '~/layouts/PageLayout.astro';
import ContactUs from '~/components/widgets/Contact.astro';

const metadata = {
  title: 'Contact',
};
---

<Layout metadata={metadata}>
  <ContactUs
    title="Laissez nous un message aujourd'hui!"
    subtitle="Partagez vos questions, commentaires et suggestions avec nous."
    inputs={[
      {
        type: 'text',
        name: 'nom',
        label: 'Nom',
      },
      {
        type: 'text',
        name: 'prenom',
        label: 'Prénom',
      },
      {
        type: 'email',
        name: 'email',
        label: 'Email',
      },
    ]}
    textarea={{
      label: 'Message',
    }}
    disclaimer={{
      label:
        'Votre opinion compte. Veuillez noter que les informations que vous partagez avec nous resteront confidentielles et ne seront pas utilisées à des fins autres que de répondre à votre message. Consultez notre politique de confidentialité pour en savoir plus sur notre engagement envers la protection de vos données.',
    }}
    description="Nous sommes impatients de vous entendre. Nous nous efforçons de vous répondre dans les 24 heures."
  />
</Layout>
